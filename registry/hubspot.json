{
  "$schema": "./schemas/registry-provider.schema.json",
  "provider": "hubspot",
  "auth": {
    "header": {
      "header_name": "authorization",
      "value_template": "Bearer {{secret}}"
    }
  },
  "hosts": ["api.hubapi.com"],
  "capabilities": [
    {
      "id": "hubspot/crm-objects",
      "provider": "hubspot",
      "allow": {
        "hosts": ["api.hubapi.com"],
        "methods": ["GET", "POST", "PATCH", "DELETE"],
        "pathPrefixes": ["/crm/v3/objects/"]
      }
    },
    {
      "id": "hubspot/crm-pipelines",
      "provider": "hubspot",
      "allow": {
        "hosts": ["api.hubapi.com"],
        "methods": ["GET", "POST", "PATCH", "DELETE"],
        "pathPrefixes": ["/crm/v3/pipelines/"]
      }
    },
    {
      "id": "hubspot/crm-properties",
      "provider": "hubspot",
      "allow": {
        "hosts": ["api.hubapi.com"],
        "methods": ["GET", "POST", "PATCH", "DELETE"],
        "pathPrefixes": ["/crm/v3/properties/"]
      }
    },
    {
      "id": "hubspot/crm-associations",
      "provider": "hubspot",
      "allow": {
        "hosts": ["api.hubapi.com"],
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "pathPrefixes": [
          "/crm/v4/associations/",
          "/crm/v4/objects/"
        ]
      }
    },
    {
      "id": "hubspot/crm-object-library",
      "provider": "hubspot",
      "allow": {
        "hosts": ["api.hubapi.com"],
        "methods": ["GET"],
        "pathPrefixes": ["/crm/v3/object-library/"]
      }
    },
    {
      "id": "hubspot/marketing",
      "provider": "hubspot",
      "allow": {
        "hosts": ["api.hubapi.com"],
        "methods": ["GET", "POST", "PATCH", "DELETE"],
        "pathPrefixes": [
          "/marketing/v3/transactional/",
          "/marketing/v3/email/",
          "/marketing/v3/marketing-events/",
          "/marketing/v3/forms/",
          "/marketing/v3/campaigns/"
        ]
      }
    },
    {
      "id": "hubspot/cms",
      "provider": "hubspot",
      "allow": {
        "hosts": ["api.hubapi.com"],
        "methods": ["GET", "POST", "PATCH", "PUT", "DELETE"],
        "pathPrefixes": [
          "/cms/v3/blogs/",
          "/cms/v3/pages/",
          "/cms/v3/site-pages/",
          "/cms/v3/hubdb/",
          "/cms/v3/domains/",
          "/cms/v3/url-redirects/",
          "/cms/v3/source-code/"
        ]
      }
    },
    {
      "id": "hubspot/conversations",
      "provider": "hubspot",
      "allow": {
        "hosts": ["api.hubapi.com"],
        "methods": ["GET", "POST", "PATCH", "DELETE"],
        "pathPrefixes": ["/conversations/v3/"]
      }
    },
    {
      "id": "hubspot/automation",
      "provider": "hubspot",
      "allow": {
        "hosts": ["api.hubapi.com"],
        "methods": ["GET", "POST", "PATCH", "DELETE"],
        "pathPrefixes": ["/automation/v4/"]
      }
    },
    {
      "id": "hubspot/files",
      "provider": "hubspot",
      "allow": {
        "hosts": ["api.hubapi.com"],
        "methods": ["GET", "POST", "DELETE"],
        "pathPrefixes": ["/files/v3/"]
      }
    },
    {
      "id": "hubspot/events",
      "provider": "hubspot",
      "allow": {
        "hosts": ["api.hubapi.com"],
        "methods": ["GET", "POST", "PATCH", "DELETE"],
        "pathPrefixes": ["/events/v3/"]
      }
    },
    {
      "id": "hubspot/account",
      "provider": "hubspot",
      "allow": {
        "hosts": ["api.hubapi.com"],
        "methods": ["GET"],
        "pathPrefixes": ["/account-info/v3/"]
      }
    },
    {
      "id": "hubspot/settings",
      "provider": "hubspot",
      "allow": {
        "hosts": ["api.hubapi.com"],
        "methods": ["GET", "POST", "PATCH", "DELETE"],
        "pathPrefixes": [
          "/settings/v3/users/",
          "/settings/v3/business-units/"
        ]
      }
    }
  ]
}
