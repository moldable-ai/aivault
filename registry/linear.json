{
  "$schema": "./schemas/registry-provider.schema.json",
  "provider": "linear",
  "vaultSecrets": {
    "LINEAR_API_KEY": "secret"
  },
  "auth": {
    "header": {
      "header_name": "authorization",
      "value_template": "Bearer {{secret}}"
    }
  },
  "hosts": ["api.linear.app", "uploads.linear.app"],
  "capabilities": [
    {
      "id": "linear/graphql",
      "provider": "linear",
      "allow": {
        "hosts": ["api.linear.app"],
        "methods": ["POST"],
        "pathPrefixes": ["/graphql"]
      }
    },
    {
      "id": "linear/storage",
      "provider": "linear",
      "allow": {
        "hosts": ["uploads.linear.app"],
        "methods": ["GET"],
        "pathPrefixes": ["/"]
      }
    }
  ]
}
