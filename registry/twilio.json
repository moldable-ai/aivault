{
  "$schema": "./schemas/registry-provider.schema.json",
  "provider": "twilio",
  "vaultSecrets": {
    "TWILIO_ACCOUNT_SID": "username",
    "TWILIO_AUTH_TOKEN": "password"
  },
  "auth": "basic",
  "hosts": ["api.twilio.com"],
  "capabilities": [
    {
      "id": "twilio/api",
      "provider": "twilio",
      "allow": {
        "hosts": ["api.twilio.com"],
        "methods": ["POST", "GET", "DELETE"],
        "pathPrefixes": ["/2010-04-01"]
      }
    }
  ]
}
