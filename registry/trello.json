{
  "$schema": "./schemas/registry-provider.schema.json",
  "provider": "trello",
  "vaultSecrets": {
    "TRELLO_API_KEY": "key",
    "TRELLO_TOKEN": "token"
  },
  "auth": {
    "multi_query": [
      {
        "param_name": "key",
        "value_template": "{{key}}"
      },
      {
        "param_name": "token",
        "value_template": "{{token}}"
      }
    ]
  },
  "hosts": ["api.trello.com"],
  "capabilities": [
    {
      "id": "trello/boards",
      "provider": "trello",
      "allow": {
        "hosts": ["api.trello.com"],
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "pathPrefixes": ["/1/boards"]
      }
    },
    {
      "id": "trello/cards",
      "provider": "trello",
      "allow": {
        "hosts": ["api.trello.com"],
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "pathPrefixes": ["/1/cards"]
      }
    },
    {
