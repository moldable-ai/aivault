{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aivault.dev/schemas/registry-provider.schema.json",
  "title": "aivault Registry Provider",
  "type": "object",
  "additionalProperties": false,
  "required": ["provider", "auth", "hosts", "capabilities"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "provider": {
      "type": "string",
      "minLength": 1
    },
    "auth": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["header"],
          "properties": {
            "header": {
              "type": "object",
              "additionalProperties": false,
              "required": ["header_name", "value_template"],
              "properties": {
                "header_name": { "type": "string", "minLength": 1 },
                "value_template": { "type": "string", "minLength": 1 }
              }
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["query"],
          "properties": {
            "query": {
              "type": "object",
              "additionalProperties": false,
              "required": ["param_name"],
              "properties": {
                "param_name": { "type": "string", "minLength": 1 }
              }
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["o_auth2"],
          "properties": {
            "o_auth2": {
              "type": "object",
              "additionalProperties": false,
              "required": ["grant_type", "token_endpoint"],
              "properties": {
                "grant_type": { "type": "string", "minLength": 1 },
                "token_endpoint": { "type": "string", "minLength": 1 },
                "scopes": {
                  "type": "array",
                  "items": { "type": "string", "minLength": 1 }
                }
              }
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["aws_sig_v4"],
          "properties": {
            "aws_sig_v4": {
              "type": "object",
              "additionalProperties": false,
              "required": ["service", "region"],
              "properties": {
                "service": { "type": "string", "minLength": 1 },
                "region": { "type": "string", "minLength": 1 }
              }
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["hmac"],
          "properties": {
            "hmac": {
              "type": "object",
              "additionalProperties": false,
              "required": ["algorithm", "header_name", "value_template"],
              "properties": {
                "algorithm": { "type": "string", "minLength": 1 },
                "header_name": { "type": "string", "minLength": 1 },
                "value_template": { "type": "string", "minLength": 1 }
              }
            }
          }
        },
        {
          "type": "string",
          "enum": ["basic", "mtls"]
        }
      ]
    },
    "hosts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "capabilities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "provider", "allow"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "provider": { "type": "string", "minLength": 1 },
          "allow": {
            "type": "object",
            "additionalProperties": false,
            "required": ["hosts", "methods", "pathPrefixes"],
            "properties": {
              "hosts": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              },
              "methods": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              },
              "pathPrefixes": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              }
            }
          }
        }
      }
    }
  }
}
