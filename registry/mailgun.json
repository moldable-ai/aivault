{
  "$schema": "./schemas/registry-provider.schema.json",
  "provider": "mailgun",
  "auth": "basic",
  "hosts": ["api.mailgun.net"],
  "capabilities": [
    {
      "id": "mailgun/sending",
      "provider": "mailgun",
      "allow": {
        "hosts": ["api.mailgun.net"],
        "methods": ["POST", "GET"],
        "pathPrefixes": ["/v3/"]
      }
    },
    {
      "id": "mailgun/domains",
      "provider": "mailgun",
      "allow": {
        "hosts": ["api.mailgun.net"],
        "methods": ["POST", "GET", "PUT", "DELETE"],
        "pathPrefixes": ["/v3/domains"]
      }
    },
    {
      "id": "mailgun/routes",
      "provider": "mailgun",
      "allow": {
        "hosts": ["api.mailgun.net"],
        "methods": ["POST", "GET", "PUT", "DELETE"],
        "pathPrefixes": ["/v3/routes"]
      }
    },
    {
      "id": "mailgun/lists",
      "provider": "mailgun",
      "allow": {
        "hosts": ["api.mailgun.net"],
        "methods": ["POST", "GET", "PUT", "DELETE"],
        "pathPrefixes": ["/v3/lists"]
      }
    }
  ]
}
